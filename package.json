{
  "name": "nodejs-template-ts",
  "private": true,
  "version": "1.0.0",
  "description": "nodejs-template-ts",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node_modules/.bin/knex migrate:latest && nest start --watch",
    "start:prod": "node_modules/.bin/knex migrate:latest && npm run prebuild && npm run build && pm2-runtime -i 0 dist/src/main.js",
    "start:debug": "node_modules/.bin/knex migrate:latest && nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:up": "node_modules/.bin/knex migrate:up",
    "db:down": "node_modules/.bin/knex migrate:down",
    "db:latest": "node_modules/.bin/knex migrate:latest",
    "db:rollback": "node_modules/.bin/knex migrate:rollback",
    "db:make": "node_modules/.bin/knex --migrations-directory src/database/migrations migrate:make"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.7",
    "@nestjs/core": "^8.4.7",
    "@nestjs/platform-express": "^8.4.7",
    "axios": "^0.27.2",
    "big.js": "^6.2.1",
    "cls-proxify": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.2",
    "express-pino-logger": "^7.0.0",
    "helmet": "^6.0.0",
    "knex": "^2.3.0",
    "objection": "^3.0.1",
    "pg": "^8.8.0",
    "pino": "^8.6.1",
    "pm2": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.6",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@types/big.js": "^6.1.6",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=16.15.1",
    "npm": ">=8.12.1"
  }
}
